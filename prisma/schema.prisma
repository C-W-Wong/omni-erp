// Import Trading ERP - Prisma Schema
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication Models
// ============================================

enum Role {
  ADMIN
  SALES
  WAREHOUSE
  PURCHASING
  ACCOUNTING
}

model User {
  id                  String              @id @default(cuid())
  email               String              @unique
  name                String?
  password            String
  role                Role                @default(SALES)
  isActive            Boolean             @default(true)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  confirmedBatches    Batch[]
  requestedTransfers  InventoryTransfer[] @relation("TransferRequester")
  approvedTransfers   InventoryTransfer[] @relation("TransferApprover")
  completedTransfers  InventoryTransfer[] @relation("TransferCompleter")

  @@map("users")
}

// ============================================
// Product Models
// ============================================

model ProductCategory {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  parentId    String?
  parent      ProductCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    ProductCategory[] @relation("CategoryHierarchy")
  products    Product[]
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("product_categories")
}

model Product {
  id              String          @id @default(cuid())
  sku             String          @unique
  name            String
  description     String?
  categoryId      String?
  category        ProductCategory? @relation(fields: [categoryId], references: [id])
  unit            String          @default("PCS")   // PCS, KG, M, L, etc.
  defaultPrice    Decimal         @default(0) @db.Decimal(15, 2)
  minStockLevel   Int             @default(0)       // Low stock alert threshold
  isActive        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  batches         Batch[]
  inventory       Inventory[]
  transferItems   InventoryTransferItem[]

  @@index([categoryId])
  @@index([sku])
  @@map("products")
}

// ============================================
// Customer Model
// ============================================

model Customer {
  id              String    @id @default(cuid())
  code            String    @unique                    // Customer code (e.g., CUST-001)
  name            String
  contactPerson   String?
  email           String?
  phone           String?
  fax             String?
  address         String?
  city            String?
  country         String?
  postalCode      String?
  taxId           String?                              // Tax identification number
  paymentTerms    Int       @default(30)               // Payment terms in days
  creditLimit     Decimal   @default(0) @db.Decimal(15, 2)
  notes           String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([code])
  @@index([name])
  @@map("customers")
}

// ============================================
// Supplier Model
// ============================================

model Supplier {
  id              String    @id @default(cuid())
  code            String    @unique                    // Supplier code (e.g., SUP-001)
  name            String
  contactPerson   String?
  email           String?
  phone           String?
  fax             String?
  address         String?
  city            String?
  country         String?
  postalCode      String?
  taxId           String?
  paymentTerms    Int       @default(30)               // Payment terms in days
  currency        String    @default("USD")            // Default trading currency
  leadTimeDays    Int       @default(14)               // Average lead time in days
  notes           String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  batches         Batch[]

  @@index([code])
  @@index([name])
  @@map("suppliers")
}

// ============================================
// Warehouse Model
// ============================================

model Warehouse {
  id                      String    @id @default(cuid())
  code                    String    @unique                        // Warehouse code (e.g., WH-MAIN)
  name                    String
  address                 String?
  city                    String?
  country                 String?
  postalCode              String?
  phone                   String?
  manager                 String?                                  // Warehouse manager name
  isDefault               Boolean   @default(false)                // Default warehouse for operations
  isActive                Boolean   @default(true)
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  batches                 Batch[]
  inventory               Inventory[]
  outgoingTransfers       InventoryTransfer[] @relation("TransferSource")
  incomingTransfers       InventoryTransfer[] @relation("TransferTarget")

  @@index([code])
  @@map("warehouses")
}

// ============================================
// Landed Cost Models
// ============================================

// Cost item types (Freight, Customs Duty, Insurance, etc.)
model CostItemType {
  id              String    @id @default(cuid())
  code            String    @unique                        // Type code (e.g., FREIGHT, DUTY)
  name            String                                   // Display name
  description     String?
  isSystem        Boolean   @default(false)                // System types cannot be deleted
  isActive        Boolean   @default(true)
  sortOrder       Int       @default(0)                    // For display ordering
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  landedCostItems LandedCostItem[]

  @@index([code])
  @@map("cost_item_types")
}

// Batch status enum
enum BatchStatus {
  DRAFT              // Initial state, costs can be edited
  CONFIRMED          // Costs confirmed and locked
  CANCELLED          // Batch cancelled
}

// Batch - represents a shipment/lot of products with landed cost tracking
model Batch {
  id                  String          @id @default(cuid())
  batchNumber         String          @unique               // Auto-generated: BTH-YYYYMMDD-XXXX
  productId           String
  product             Product         @relation(fields: [productId], references: [id])
  supplierId          String?
  supplier            Supplier?       @relation(fields: [supplierId], references: [id])
  warehouseId         String
  warehouse           Warehouse       @relation(fields: [warehouseId], references: [id])

  // Quantity and unit cost from purchase
  quantity            Decimal         @db.Decimal(15, 4)    // Quantity in batch
  unitPurchaseCost    Decimal         @db.Decimal(15, 4)    // Cost per unit from supplier
  totalPurchaseCost   Decimal         @db.Decimal(15, 2)    // quantity × unitPurchaseCost
  currency            String          @default("USD")

  // Landed costs (calculated from LandedCostItems)
  totalLandedCost     Decimal         @default(0) @db.Decimal(15, 2)  // Sum of all landed cost items
  totalCost           Decimal         @default(0) @db.Decimal(15, 2)  // totalPurchaseCost + totalLandedCost
  costPerUnit         Decimal         @default(0) @db.Decimal(15, 4)  // totalCost ÷ quantity

  // Status and dates
  status              BatchStatus     @default(DRAFT)
  receivedDate        DateTime        @default(now())        // When batch was received
  confirmedAt         DateTime?                              // When costs were confirmed
  confirmedById       String?
  confirmedBy         User?           @relation(fields: [confirmedById], references: [id])

  notes               String?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  // Related landed cost items
  landedCostItems     LandedCostItem[]
  inventory           Inventory[]
  transferItems       InventoryTransferItem[]

  @@index([batchNumber])
  @@index([productId])
  @@index([supplierId])
  @@index([warehouseId])
  @@index([status])
  @@index([receivedDate])
  @@map("batches")
}

// Landed cost item - individual cost component for a batch
model LandedCostItem {
  id              String        @id @default(cuid())
  batchId         String
  batch           Batch         @relation(fields: [batchId], references: [id], onDelete: Cascade)
  costTypeId      String
  costType        CostItemType  @relation(fields: [costTypeId], references: [id])
  amount          Decimal       @db.Decimal(15, 2)   // Cost amount
  currency        String        @default("USD")
  exchangeRate    Decimal       @default(1) @db.Decimal(10, 6)  // Rate to batch currency
  amountInBatchCurrency Decimal @db.Decimal(15, 2)   // amount × exchangeRate
  description     String?                            // Optional notes for this cost
  referenceNumber String?                            // Invoice/receipt number
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([batchId])
  @@index([costTypeId])
  @@map("landed_cost_items")
}

// ============================================
// Inventory Models
// ============================================

// Inventory - Product × Batch × Warehouse tracking
model Inventory {
  id                String      @id @default(cuid())
  productId         String
  product           Product     @relation(fields: [productId], references: [id])
  batchId           String
  batch             Batch       @relation(fields: [batchId], references: [id])
  warehouseId       String
  warehouse         Warehouse   @relation(fields: [warehouseId], references: [id])

  quantity          Decimal     @default(0) @db.Decimal(15, 4)  // Total quantity on hand
  reservedQuantity  Decimal     @default(0) @db.Decimal(15, 4)  // Reserved for confirmed orders
  // Available = quantity - reservedQuantity

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Unique constraint: one record per product-batch-warehouse combination
  @@unique([productId, batchId, warehouseId])
  @@index([productId])
  @@index([batchId])
  @@index([warehouseId])
  @@map("inventory")
}

// Inventory allocation method enum
enum AllocationMethod {
  FIFO           // First In, First Out
  LIFO           // Last In, First Out
  SPECIFIC       // Specific batch selection
  WEIGHTED_AVG   // Weighted average cost
}

// System settings
model SystemSetting {
  id            String    @id @default(cuid())
  key           String    @unique
  value         String
  description   String?
  isSystem      Boolean   @default(false)  // System settings cannot be deleted
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("system_settings")
}

// Inventory Transfer status enum
enum TransferStatus {
  DRAFT
  PENDING       // Awaiting approval
  IN_TRANSIT
  COMPLETED
  CANCELLED
}

// Inventory Transfer - between warehouses
model InventoryTransfer {
  id                  String          @id @default(cuid())
  transferNumber      String          @unique             // TR-YYYYMMDD-XXXX
  sourceWarehouseId   String
  sourceWarehouse     Warehouse       @relation("TransferSource", fields: [sourceWarehouseId], references: [id])
  targetWarehouseId   String
  targetWarehouse     Warehouse       @relation("TransferTarget", fields: [targetWarehouseId], references: [id])

  status              TransferStatus  @default(DRAFT)
  notes               String?

  requestedAt         DateTime        @default(now())
  requestedById       String?
  requestedBy         User?           @relation("TransferRequester", fields: [requestedById], references: [id])
  approvedAt          DateTime?
  approvedById        String?
  approvedBy          User?           @relation("TransferApprover", fields: [approvedById], references: [id])
  completedAt         DateTime?
  completedById       String?
  completedBy         User?           @relation("TransferCompleter", fields: [completedById], references: [id])

  items               InventoryTransferItem[]

  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  @@index([transferNumber])
  @@index([sourceWarehouseId])
  @@index([targetWarehouseId])
  @@index([status])
  @@map("inventory_transfers")
}

// Inventory Transfer Item
model InventoryTransferItem {
  id            String              @id @default(cuid())
  transferId    String
  transfer      InventoryTransfer   @relation(fields: [transferId], references: [id], onDelete: Cascade)
  productId     String
  product       Product             @relation(fields: [productId], references: [id])
  batchId       String
  batch         Batch               @relation(fields: [batchId], references: [id])
  quantity      Decimal             @db.Decimal(15, 4)

  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@index([transferId])
  @@index([productId])
  @@index([batchId])
  @@map("inventory_transfer_items")
}
