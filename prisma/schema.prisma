// Import Trading ERP - Prisma Schema
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication Models
// ============================================

enum Role {
  ADMIN
  SALES
  WAREHOUSE
  PURCHASING
  ACCOUNTING
}

model User {
  id                  String              @id @default(cuid())
  email               String              @unique
  name                String?
  password            String
  role                Role                @default(SALES)
  isActive            Boolean             @default(true)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  confirmedBatches    Batch[]
  requestedTransfers  InventoryTransfer[] @relation("TransferRequester")
  approvedTransfers   InventoryTransfer[] @relation("TransferApprover")
  completedTransfers  InventoryTransfer[] @relation("TransferCompleter")
  createdPOs          PurchaseOrder[]     @relation("POCreator")
  confirmedPOs        PurchaseOrder[]     @relation("POConfirmer")
  createdSOs          SalesOrder[]        @relation("SOCreator")
  confirmedSOs        SalesOrder[]        @relation("SOConfirmer")
  createdJEs          JournalEntry[]      @relation("JECreator")
  postedJEs           JournalEntry[]      @relation("JEPoster")

  @@map("users")
}

// ============================================
// Product Models
// ============================================

model ProductCategory {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  parentId    String?
  parent      ProductCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    ProductCategory[] @relation("CategoryHierarchy")
  products    Product[]
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("product_categories")
}

model Product {
  id              String          @id @default(cuid())
  sku             String          @unique
  name            String
  description     String?
  categoryId      String?
  category        ProductCategory? @relation(fields: [categoryId], references: [id])
  unit            String          @default("PCS")   // PCS, KG, M, L, etc.
  defaultPrice    Decimal         @default(0) @db.Decimal(15, 2)
  minStockLevel   Int             @default(0)       // Low stock alert threshold
  isActive        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  batches             Batch[]
  inventory           Inventory[]
  transferItems       InventoryTransferItem[]
  purchaseOrderItems  PurchaseOrderItem[]
  salesOrderItems     SalesOrderItem[]

  @@index([categoryId])
  @@index([sku])
  @@map("products")
}

// ============================================
// Customer Model
// ============================================

model Customer {
  id              String    @id @default(cuid())
  code            String    @unique                    // Customer code (e.g., CUST-001)
  name            String
  contactPerson   String?
  email           String?
  phone           String?
  fax             String?
  address         String?
  city            String?
  country         String?
  postalCode      String?
  taxId           String?                              // Tax identification number
  paymentTerms    Int       @default(30)               // Payment terms in days
  creditLimit     Decimal   @default(0) @db.Decimal(15, 2)
  notes           String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  salesOrders         SalesOrder[]
  accountReceivables  AccountReceivable[]

  @@index([code])
  @@index([name])
  @@map("customers")
}

// ============================================
// Supplier Model
// ============================================

model Supplier {
  id              String    @id @default(cuid())
  code            String    @unique                    // Supplier code (e.g., SUP-001)
  name            String
  contactPerson   String?
  email           String?
  phone           String?
  fax             String?
  address         String?
  city            String?
  country         String?
  postalCode      String?
  taxId           String?
  paymentTerms    Int       @default(30)               // Payment terms in days
  currency        String    @default("USD")            // Default trading currency
  leadTimeDays    Int       @default(14)               // Average lead time in days
  notes           String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  batches         Batch[]
  purchaseOrders  PurchaseOrder[]
  accountPayables AccountPayable[]

  @@index([code])
  @@index([name])
  @@map("suppliers")
}

// ============================================
// Warehouse Model
// ============================================

model Warehouse {
  id                      String    @id @default(cuid())
  code                    String    @unique                        // Warehouse code (e.g., WH-MAIN)
  name                    String
  address                 String?
  city                    String?
  country                 String?
  postalCode              String?
  phone                   String?
  manager                 String?                                  // Warehouse manager name
  isDefault               Boolean   @default(false)                // Default warehouse for operations
  isActive                Boolean   @default(true)
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  batches                 Batch[]
  inventory               Inventory[]
  outgoingTransfers       InventoryTransfer[] @relation("TransferSource")
  incomingTransfers       InventoryTransfer[] @relation("TransferTarget")
  purchaseOrders          PurchaseOrder[]
  salesOrders             SalesOrder[]

  @@index([code])
  @@map("warehouses")
}

// ============================================
// Landed Cost Models
// ============================================

// Cost item types (Freight, Customs Duty, Insurance, etc.)
model CostItemType {
  id              String    @id @default(cuid())
  code            String    @unique                        // Type code (e.g., FREIGHT, DUTY)
  name            String                                   // Display name
  description     String?
  isSystem        Boolean   @default(false)                // System types cannot be deleted
  isActive        Boolean   @default(true)
  sortOrder       Int       @default(0)                    // For display ordering
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  landedCostItems LandedCostItem[]

  @@index([code])
  @@map("cost_item_types")
}

// Batch status enum
enum BatchStatus {
  DRAFT              // Initial state, costs can be edited
  CONFIRMED          // Costs confirmed and locked
  CANCELLED          // Batch cancelled
}

// Batch - represents a shipment/lot of products with landed cost tracking
model Batch {
  id                  String          @id @default(cuid())
  batchNumber         String          @unique               // Auto-generated: BTH-YYYYMMDD-XXXX
  productId           String
  product             Product         @relation(fields: [productId], references: [id])
  supplierId          String?
  supplier            Supplier?       @relation(fields: [supplierId], references: [id])
  warehouseId         String
  warehouse           Warehouse       @relation(fields: [warehouseId], references: [id])

  // Source purchase order (optional - for traceability)
  purchaseOrderId     String?
  purchaseOrder       PurchaseOrder?  @relation(fields: [purchaseOrderId], references: [id])

  // Quantity and unit cost from purchase
  quantity            Decimal         @db.Decimal(15, 4)    // Quantity in batch
  unitPurchaseCost    Decimal         @db.Decimal(15, 4)    // Cost per unit from supplier
  totalPurchaseCost   Decimal         @db.Decimal(15, 2)    // quantity × unitPurchaseCost
  currency            String          @default("USD")

  // Landed costs (calculated from LandedCostItems)
  totalLandedCost     Decimal         @default(0) @db.Decimal(15, 2)  // Sum of all landed cost items
  totalCost           Decimal         @default(0) @db.Decimal(15, 2)  // totalPurchaseCost + totalLandedCost
  costPerUnit         Decimal         @default(0) @db.Decimal(15, 4)  // totalCost ÷ quantity

  // Status and dates
  status              BatchStatus     @default(DRAFT)
  receivedDate        DateTime        @default(now())        // When batch was received
  confirmedAt         DateTime?                              // When costs were confirmed
  confirmedById       String?
  confirmedBy         User?           @relation(fields: [confirmedById], references: [id])

  notes               String?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  // Related landed cost items
  landedCostItems     LandedCostItem[]
  inventory           Inventory[]
  transferItems       InventoryTransferItem[]
  salesAllocations    SalesOrderAllocation[]

  @@index([batchNumber])
  @@index([productId])
  @@index([supplierId])
  @@index([warehouseId])
  @@index([purchaseOrderId])
  @@index([status])
  @@index([receivedDate])
  @@map("batches")
}

// Landed cost item - individual cost component for a batch
model LandedCostItem {
  id              String        @id @default(cuid())
  batchId         String
  batch           Batch         @relation(fields: [batchId], references: [id], onDelete: Cascade)
  costTypeId      String
  costType        CostItemType  @relation(fields: [costTypeId], references: [id])
  amount          Decimal       @db.Decimal(15, 2)   // Cost amount
  currency        String        @default("USD")
  exchangeRate    Decimal       @default(1) @db.Decimal(10, 6)  // Rate to batch currency
  amountInBatchCurrency Decimal @db.Decimal(15, 2)   // amount × exchangeRate
  description     String?                            // Optional notes for this cost
  referenceNumber String?                            // Invoice/receipt number
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([batchId])
  @@index([costTypeId])
  @@map("landed_cost_items")
}

// ============================================
// Inventory Models
// ============================================

// Inventory - Product × Batch × Warehouse tracking
model Inventory {
  id                String      @id @default(cuid())
  productId         String
  product           Product     @relation(fields: [productId], references: [id])
  batchId           String
  batch             Batch       @relation(fields: [batchId], references: [id])
  warehouseId       String
  warehouse         Warehouse   @relation(fields: [warehouseId], references: [id])

  quantity          Decimal     @default(0) @db.Decimal(15, 4)  // Total quantity on hand
  reservedQuantity  Decimal     @default(0) @db.Decimal(15, 4)  // Reserved for confirmed orders
  // Available = quantity - reservedQuantity

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Unique constraint: one record per product-batch-warehouse combination
  @@unique([productId, batchId, warehouseId])
  @@index([productId])
  @@index([batchId])
  @@index([warehouseId])
  @@map("inventory")
}

// Inventory allocation method enum
enum AllocationMethod {
  FIFO           // First In, First Out
  LIFO           // Last In, First Out
  SPECIFIC       // Specific batch selection
  WEIGHTED_AVG   // Weighted average cost
}

// System settings
model SystemSetting {
  id            String    @id @default(cuid())
  key           String    @unique
  value         String
  description   String?
  isSystem      Boolean   @default(false)  // System settings cannot be deleted
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("system_settings")
}

// Inventory Transfer status enum
enum TransferStatus {
  DRAFT
  PENDING       // Awaiting approval
  IN_TRANSIT
  COMPLETED
  CANCELLED
}

// Inventory Transfer - between warehouses
model InventoryTransfer {
  id                  String          @id @default(cuid())
  transferNumber      String          @unique             // TR-YYYYMMDD-XXXX
  sourceWarehouseId   String
  sourceWarehouse     Warehouse       @relation("TransferSource", fields: [sourceWarehouseId], references: [id])
  targetWarehouseId   String
  targetWarehouse     Warehouse       @relation("TransferTarget", fields: [targetWarehouseId], references: [id])

  status              TransferStatus  @default(DRAFT)
  notes               String?

  requestedAt         DateTime        @default(now())
  requestedById       String?
  requestedBy         User?           @relation("TransferRequester", fields: [requestedById], references: [id])
  approvedAt          DateTime?
  approvedById        String?
  approvedBy          User?           @relation("TransferApprover", fields: [approvedById], references: [id])
  completedAt         DateTime?
  completedById       String?
  completedBy         User?           @relation("TransferCompleter", fields: [completedById], references: [id])

  items               InventoryTransferItem[]

  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  @@index([transferNumber])
  @@index([sourceWarehouseId])
  @@index([targetWarehouseId])
  @@index([status])
  @@map("inventory_transfers")
}

// Inventory Transfer Item
model InventoryTransferItem {
  id            String              @id @default(cuid())
  transferId    String
  transfer      InventoryTransfer   @relation(fields: [transferId], references: [id], onDelete: Cascade)
  productId     String
  product       Product             @relation(fields: [productId], references: [id])
  batchId       String
  batch         Batch               @relation(fields: [batchId], references: [id])
  quantity      Decimal             @db.Decimal(15, 4)

  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@index([transferId])
  @@index([productId])
  @@index([batchId])
  @@map("inventory_transfer_items")
}

// ============================================
// Purchase Order Models
// ============================================

enum PurchaseOrderStatus {
  DRAFT
  CONFIRMED
  PARTIAL       // Partially received
  RECEIVED      // Fully received
  CANCELLED
}

model PurchaseOrder {
  id                String              @id @default(cuid())
  orderNumber       String              @unique             // PO-YYYYMMDD-XXXX
  supplierId        String
  supplier          Supplier            @relation(fields: [supplierId], references: [id])
  warehouseId       String                                  // Default receiving warehouse
  warehouse         Warehouse           @relation(fields: [warehouseId], references: [id])

  status            PurchaseOrderStatus @default(DRAFT)
  orderDate         DateTime            @default(now())
  expectedDate      DateTime?                               // Expected delivery date

  // Amounts
  currency          String              @default("USD")
  subtotal          Decimal             @default(0) @db.Decimal(15, 2)
  taxAmount         Decimal             @default(0) @db.Decimal(15, 2)
  totalAmount       Decimal             @default(0) @db.Decimal(15, 2)

  notes             String?

  // User tracking
  createdById       String?
  createdBy         User?               @relation("POCreator", fields: [createdById], references: [id])
  confirmedAt       DateTime?
  confirmedById     String?
  confirmedBy       User?               @relation("POConfirmer", fields: [confirmedById], references: [id])

  items             PurchaseOrderItem[]
  batches           Batch[]                                 // Batches created from receiving
  accountPayables   AccountPayable[]

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([orderNumber])
  @@index([supplierId])
  @@index([warehouseId])
  @@index([status])
  @@index([orderDate])
  @@map("purchase_orders")
}

model PurchaseOrderItem {
  id                String              @id @default(cuid())
  purchaseOrderId   String
  purchaseOrder     PurchaseOrder       @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  productId         String
  product           Product             @relation(fields: [productId], references: [id])

  quantity          Decimal             @db.Decimal(15, 4)
  unitPrice         Decimal             @db.Decimal(15, 4)
  totalPrice        Decimal             @db.Decimal(15, 2)

  // Receiving tracking
  receivedQuantity  Decimal             @default(0) @db.Decimal(15, 4)

  notes             String?

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([purchaseOrderId])
  @@index([productId])
  @@map("purchase_order_items")
}

// ============================================
// 銷售模組 (Sales Module)
// ============================================

enum SalesOrderStatus {
  DRAFT
  CONFIRMED       // Order confirmed, inventory allocated
  PROCESSING      // Being prepared for shipment
  SHIPPED         // Shipped to customer
  COMPLETED       // Customer received, fully paid
  CANCELLED
}

model SalesOrder {
  id                String            @id @default(cuid())
  orderNumber       String            @unique               // SO-YYYYMMDD-XXXX
  customerId        String
  customer          Customer          @relation(fields: [customerId], references: [id])
  warehouseId       String                                  // Shipping warehouse
  warehouse         Warehouse         @relation(fields: [warehouseId], references: [id])

  status            SalesOrderStatus  @default(DRAFT)
  orderDate         DateTime          @default(now())
  expectedShipDate  DateTime?
  shippedDate       DateTime?
  shippingAddress   String?

  // Amounts
  currency          String            @default("USD")
  subtotal          Decimal           @default(0) @db.Decimal(15, 2)
  taxRate           Decimal           @default(0) @db.Decimal(5, 4)    // e.g., 0.05 for 5%
  taxAmount         Decimal           @default(0) @db.Decimal(15, 2)
  shippingFee       Decimal           @default(0) @db.Decimal(15, 2)
  totalAmount       Decimal           @default(0) @db.Decimal(15, 2)
  totalCost         Decimal           @default(0) @db.Decimal(15, 2)   // COGS (Cost of Goods Sold)

  notes             String?

  // User tracking
  createdById       String?
  createdBy         User?             @relation("SOCreator", fields: [createdById], references: [id])
  confirmedAt       DateTime?
  confirmedById     String?
  confirmedBy       User?             @relation("SOConfirmer", fields: [confirmedById], references: [id])

  items               SalesOrderItem[]
  accountReceivables  AccountReceivable[]

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([orderNumber])
  @@index([customerId])
  @@index([warehouseId])
  @@index([status])
  @@index([orderDate])
  @@map("sales_orders")
}

model SalesOrderItem {
  id                String            @id @default(cuid())
  salesOrderId      String
  salesOrder        SalesOrder        @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)
  productId         String
  product           Product           @relation(fields: [productId], references: [id])

  quantity          Decimal           @db.Decimal(15, 4)
  unitPrice         Decimal           @db.Decimal(15, 4)
  amount            Decimal           @db.Decimal(15, 2)     // quantity × unitPrice

  // Cost tracking (calculated from batch allocations)
  unitCost          Decimal           @default(0) @db.Decimal(15, 6)
  costAmount        Decimal           @default(0) @db.Decimal(15, 2)  // COGS for this line

  // Shipping tracking
  shippedQuantity   Decimal           @default(0) @db.Decimal(15, 4)

  notes             String?

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  allocations       SalesOrderAllocation[]

  @@index([salesOrderId])
  @@index([productId])
  @@map("sales_order_items")
}

// Tracks which batches are allocated to which sales order items
model SalesOrderAllocation {
  id                String            @id @default(cuid())
  salesOrderItemId  String
  salesOrderItem    SalesOrderItem    @relation(fields: [salesOrderItemId], references: [id], onDelete: Cascade)
  batchId           String
  batch             Batch             @relation(fields: [batchId], references: [id])

  quantity          Decimal           @db.Decimal(15, 4)    // Quantity allocated from this batch
  costPerUnit       Decimal           @db.Decimal(15, 6)    // Cost per unit at time of allocation

  createdAt         DateTime          @default(now())

  @@unique([salesOrderItemId, batchId])
  @@index([salesOrderItemId])
  @@index([batchId])
  @@map("sales_order_allocations")
}

// ============================================
// 會計模組 (Accounting Module)
// ============================================

enum NormalBalance {
  DEBIT
  CREDIT
}

// Account Category - for classifying accounts
model AccountCategory {
  id            String        @id @default(cuid())
  code          String        @unique               // 1=Assets, 2=Liabilities, 3=Equity, 4=Revenue, 5=Expenses
  name          String
  normalBalance NormalBalance
  displayOrder  Int           @default(0)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  accounts      ChartOfAccount[]

  @@index([code])
  @@map("account_categories")
}

// Chart of Accounts - hierarchical account structure
model ChartOfAccount {
  id          String            @id @default(cuid())
  accountCode String            @unique               // e.g., 1101, 2110, 4110
  name        String
  categoryId  String
  category    AccountCategory   @relation(fields: [categoryId], references: [id])
  parentId    String?
  parent      ChartOfAccount?   @relation("AccountHierarchy", fields: [parentId], references: [id])
  children    ChartOfAccount[]  @relation("AccountHierarchy")
  level       Int               @default(1)           // 1=Top level, 2=Sub, 3=Detail
  isDetail    Boolean           @default(true)        // Can post entries to this account
  isActive    Boolean           @default(true)
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  journalLines JournalEntryLine[]

  @@index([accountCode])
  @@index([categoryId])
  @@index([parentId])
  @@map("chart_of_accounts")
}

enum JournalStatus {
  DRAFT
  POSTED
  VOIDED
}

// Journal Entry - double-entry accounting
model JournalEntry {
  id            String        @id @default(cuid())
  entryNumber   String        @unique               // JE-YYYYMMDD-XXXX
  entryDate     DateTime
  referenceType String                              // SalesOrder, PurchaseOrder, Manual, etc.
  referenceId   String?                             // ID of the source document
  description   String?
  status        JournalStatus @default(DRAFT)
  totalDebit    Decimal       @default(0) @db.Decimal(15, 2)
  totalCredit   Decimal       @default(0) @db.Decimal(15, 2)

  createdById   String?
  createdBy     User?         @relation("JECreator", fields: [createdById], references: [id])
  postedAt      DateTime?
  postedById    String?
  postedBy      User?         @relation("JEPoster", fields: [postedById], references: [id])

  lines         JournalEntryLine[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([entryNumber])
  @@index([entryDate])
  @@index([referenceType, referenceId])
  @@index([status])
  @@map("journal_entries")
}

// Journal Entry Line - individual debit/credit line
model JournalEntryLine {
  id             String         @id @default(cuid())
  journalEntryId String
  journalEntry   JournalEntry   @relation(fields: [journalEntryId], references: [id], onDelete: Cascade)
  accountId      String
  account        ChartOfAccount @relation(fields: [accountId], references: [id])
  description    String?
  debitAmount    Decimal        @default(0) @db.Decimal(15, 2)
  creditAmount   Decimal        @default(0) @db.Decimal(15, 2)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([journalEntryId])
  @@index([accountId])
  @@map("journal_entry_lines")
}

// ============================================
// 應收/應付帳款 (Accounts Receivable/Payable)
// ============================================

enum ARStatus {
  PENDING
  PARTIAL
  PAID
  OVERDUE
  WRITTEN_OFF
}

// Account Receivable - customer invoices
model AccountReceivable {
  id            String      @id @default(cuid())
  customerId    String
  customer      Customer    @relation(fields: [customerId], references: [id])
  salesOrderId  String
  salesOrder    SalesOrder  @relation(fields: [salesOrderId], references: [id])
  invoiceNumber String?
  invoiceDate   DateTime
  dueDate       DateTime
  amount        Decimal     @db.Decimal(15, 2)
  paidAmount    Decimal     @default(0) @db.Decimal(15, 2)
  balance       Decimal     @db.Decimal(15, 2)
  status        ARStatus    @default(PENDING)
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([customerId])
  @@index([salesOrderId])
  @@index([status])
  @@index([dueDate])
  @@map("account_receivables")
}

enum APStatus {
  PENDING
  PARTIAL
  PAID
  OVERDUE
}

// Account Payable - supplier invoices
model AccountPayable {
  id              String        @id @default(cuid())
  supplierId      String
  supplier        Supplier      @relation(fields: [supplierId], references: [id])
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  invoiceNumber   String?
  invoiceDate     DateTime
  dueDate         DateTime
  amount          Decimal       @db.Decimal(15, 2)
  paidAmount      Decimal       @default(0) @db.Decimal(15, 2)
  balance         Decimal       @db.Decimal(15, 2)
  status          APStatus      @default(PENDING)
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([supplierId])
  @@index([purchaseOrderId])
  @@index([status])
  @@index([dueDate])
  @@map("account_payables")
}
